{
  "openapi": "3.0.1",
  "info": {
    "title": "Restaurants API",
    "description": "Restaurants API description.",
    "termsOfService": "https://opensource.org/licenses/MIT",
    "contact": {
      "name": "Kevin Reid",
      "url": "https://github.com/codeswithfists"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    },
    "version": "v1"
  },
  "paths": {
    "/": {
      "post": {
        "tags": [
          "Restaurants.Api"
        ],
        "summary": "Register",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterRestaurantRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "format": "uuid"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Restaurants.Api"
        ],
        "summary": "List",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/RestaurantResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/{id}": {
      "get": {
        "tags": [
          "Restaurants.Api"
        ],
        "summary": "Get by Id",
        "operationId": "GetById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RestaurantResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/{restaurantId}/meals": {
      "post": {
        "tags": [
          "Restaurants.Api"
        ],
        "parameters": [
          {
            "name": "restaurantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateMealRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AddressResponse": {
        "required": [
          "street",
          "city",
          "postCode",
          "state"
        ],
        "type": "object",
        "properties": {
          "street": {
            "maxLength": 50,
            "minLength": 10,
            "type": "string"
          },
          "city": {
            "type": "string"
          },
          "postCode": {
            "maxLength": 6,
            "minLength": 6,
            "type": "string"
          },
          "state": {
            "maxLength": 2,
            "minLength": 2,
            "type": "string"
          }
        }
      },
      "ContactResponse": {
        "required": [
          "name",
          "email",
          "phone",
          "type"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 50,
            "minLength": 3,
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "phone": {
            "type": "string",
            "nullable": true
          },
          "type": {
            "type": "string"
          }
        }
      },
      "CreateMealRequest": {
        "required": [
          "name",
          "price",
          "modifiers"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "modifiers": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MealModifierDto"
            }
          }
        }
      },
      "MealModifierDto": {
        "required": [
          "name",
          "priceAdjustment"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "priceAdjustment": {
            "type": "number",
            "format": "double"
          }
        }
      },
      "RegisterRestaurantRequest": {
        "required": [
          "name",
          "address",
          "contact"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "address": {
            "$ref": "#/components/schemas/AddressResponse"
          },
          "contact": {
            "$ref": "#/components/schemas/ContactResponse"
          }
        }
      },
      "RestaurantMealModifierResponse": {
        "required": [
          "name",
          "priceAdjustment"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 50,
            "minLength": 3,
            "type": "string"
          },
          "priceAdjustment": {
            "maximum": 5,
            "minimum": -5,
            "type": "number",
            "format": "double"
          }
        }
      },
      "RestaurantMealResponse": {
        "required": [
          "id",
          "name",
          "price",
          "availableModifiers"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "availableModifiers": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/RestaurantMealModifierResponse"
            }
          }
        }
      },
      "RestaurantResponse": {
        "required": [
          "id",
          "name",
          "contact",
          "address",
          "menu"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "contact": {
            "$ref": "#/components/schemas/ContactResponse"
          },
          "address": {
            "$ref": "#/components/schemas/AddressResponse"
          },
          "menu": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/RestaurantMealResponse"
            }
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Restaurants.Api"
    }
  ]
}